extends layout

block scripts
    // Criminal statistics page script
    script(src="/javascripts/criminal_statistics.js")

    //Chart.js
    script(src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.5.0/chart.min.js")

    block navBar
        #topNav
            a(href="/" class="navbarLeft") Nyheter och händelser
            a(href="/about") Om
            a(class="active statistics" href="/statistics") Kriminalstatistik
            a(href="/police-stations") Polisstationer
            a(href="/hotspot") Hotspot
            a(href="/daily-summary") Senaste dygnet
            a(href="javascript:void(0)" class="icon" onclick="myFunction()")
                i(class="fa fa-bars")

block content
    main.flex-shrink-0
        #about-bgd

            .container.container-statistics
                h1.pt-5 Kriminalstatistik

                p.lead Pin a footer to the bottom of the viewport in desktop browsers with this custom HTML and CSS.

                .card.text-center
                    .card-header
                        ul.nav.nav-tabs.card-header-tabs
                            li.nav-item
                                a.nav-link.active(aria-current='true', href='#') Skjutningar
                            |
                            li.nav-item
                                a.nav-link(href='#') Sprängningar
                            |
                            li.nav-item
                                a.nav-link(href='#', tabindex='-1') Övrigt
                    |
                    .card-body
                        h2.pt-4 Skjutningar

                            h3.pt-3 2021
                            h5 I år:
                                strong  180
                                |  st
                            canvas#shootings_2021

                            h3.pt-5 2020
                            h5 Totalt: <b>366</b> st
                            canvas#shootings_2020

                            h3.pt-5 2019
                            h5 Totalt: <b>334</b> st
                            canvas.pb-5#shootings_2019

